@model List<CadastroWebApp.Models.Cliente>
@{
    ViewData["Title"] = "Gerenciar Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-users text-primary"></i> Gerenciar Clientes</h2>
        <p class="text-muted">Total de clientes: @ViewBag.TotalCount</p>
    </div>
    <a href="/Clientes/Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Novo Cliente
    </a>
</div>

<!-- Barra de pesquisa -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" action="/Clientes" class="row g-3">
            <div class="col-md-8">
                <input type="text" name="search" class="form-control" placeholder="Pesquisar por nome ou email..." value="@ViewBag.Search">
            </div>
            <div class="col-md-4">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i> Pesquisar
                    </button>
                    <a href="/Clientes" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Limpar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Tabela de clientes -->
<div class="card">
    <div class="card-body">
        @if (Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Data Nascimento</th>
                            <th>Idade</th>
                            <th>Gênero</th>
                            <th>Data Cadastro</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@cliente.Nome</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(cliente.Email))
                                    {
                                        <a href="mailto:@cliente.Email">@cliente.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (cliente.DataNascimento.HasValue)
                                    {
                                        @cliente.DataNascimento.Value.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (cliente.Idade.HasValue)
                                    {
                                        <span>@cliente.Idade anos</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@(cliente.Genero ?? "-")</td>
                                <td>
                                    <small class="text-muted">@cliente.DataCadastro.ToString("dd/MM/yyyy HH:mm")</small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="/Clientes/Details/@cliente.Id" class="btn btn-sm btn-outline-info" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/Clientes/Edit/@cliente.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/Clientes/Delete/@cliente.Id" class="btn btn-sm btn-outline-danger" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginação -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav class="pagination-wrapper d-flex justify-content-center">
                    <ul class="pagination">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)&search=@ViewBag.Search">
                                    <i class="fas fa-chevron-left"></i> Anterior
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i&search=@ViewBag.Search">@i</a>
                            </li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)&search=@ViewBag.Search">
                                    Próximo <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Nenhum cliente encontrado</h5>
                <p class="text-muted">
                    @if (!string.IsNullOrEmpty(ViewBag.Search))
                    {
                        <span>Não encontramos clientes com o termo "@ViewBag.Search"</span>
                    }
                    else
                    {
                        <span>Comece cadastrando seu primeiro cliente!</span>
                    }
                </p>
                <a href="/Clientes/Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Cadastrar Primeiro Cliente
                </a>
            </div>
        }
    </div>
</div>