@model CadastroWebApp.Models.Pedido
@{
    ViewData["Title"] = "Editar Pedido";
    var clientes = ViewBag.Clientes as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-edit text-primary"></i> Editar Pedido #@Model.Id
                </h4>
            </div>
            <div class="card-body">
                <form method="post" asp-antiforgery="true">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="DataCadastro" type="hidden" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ClienteId" class="form-label">Cliente:</label>
                                <select asp-for="ClienteId" asp-items="clientes" class="form-select" required>
                                    <option value="">Selecione um cliente</option>
                                </select>
                                <span asp-validation-for="ClienteId" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DataPedido" class="form-label">Data do Pedido:</label>
                                <input asp-for="DataPedido" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="DataPedido" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ValorTotal" class="form-label">Valor Total:</label>
                                <input asp-for="ValorTotal" type="number" step="0.01" class="form-control" required />
                                <span asp-validation-for="ValorTotal" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Status" class="form-label">Status:</label>
                                <select asp-for="Status" class="form-select" required>
                                    <option value="Pendente">Pendente</option>
                                    <option value="Processando">Processando</option>
                                    <option value="Enviado">Enviado</option>
                                    <option value="Entregue">Entregue</option>
                                    <option value="Cancelado">Cancelado</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Observacoes" class="form-label">Observações:</label>
                        <textarea asp-for="Observacoes" class="form-control" rows="3" placeholder="Observações sobre o pedido (opcional)"></textarea>
                        <span asp-validation-for="Observacoes" class="text-danger"></span>
                    </div>

                    <!-- Informações de cadastro -->
                    <div class="alert alert-info">
                        <small>
                            <i class="fas fa-info-circle"></i>
                            <strong>Cadastrado em:</strong> @Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")
                            @if (Model.DataModificacao.HasValue)
                            {
                                <br><strong>Última modificação:</strong> @Model.DataModificacao.Value.ToString("dd/MM/yyyy HH:mm")
                            }
                        </small>
                    </div>

                    <!-- Resumo de erros de validação -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Salvar Alterações
                        </button>
                        <a href="/Pedidos" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                        <a href="/Pedidos/Details/@Model.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> Ver Detalhes
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
